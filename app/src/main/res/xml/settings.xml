<android.support.v7.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/settings_tablet">
        <EditTextPreference
            android:key="@string/settings_tablet_id_id"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="@string/settings_tablet_id_summary"
            android:text="text"
            android:title="@string/settings_tablet_id_title" />
        <EditTextPreference
            android:key="@string/settings_tablet_key_id"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="@string/settings_tablet_key_summary"
            android:title="@string/settings_tablet_key_title" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/settings_server">
        <EditTextPreference
            android:key="@string/settings_api_url_id"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="@string/settings_api_url_summary"
            android:title="@string/settings_api_url_title" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/settings_scan">
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/settings_scan_beep_id"
            android:summary="@string/settings_scan_beep_summary"
            android:title="@string/settings_scan_beep_title" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/settings_scan_orientation_lock_id"
            android:summary="@string/settings_scan_orientation_lock_summary"
            android:title="@string/settings_scan_orientation_lock_title" />
    </PreferenceCategory>
</android.support.v7.preference.PreferenceScreen>
